/* 全局样式 */
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 公共样式类 */
.container {
  padding: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
  color: #333;
}

/* 按钮样式 */
.btn-primary {
  background-color: #ff85a2;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
}