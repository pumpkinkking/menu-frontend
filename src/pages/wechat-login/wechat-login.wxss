.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 0 40rpx;
  background-color: #f5f9ff;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 80rpx;
  font-weight: bold;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.tips {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
}