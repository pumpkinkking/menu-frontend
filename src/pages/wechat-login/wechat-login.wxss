.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 0 40rpx;
  background: linear-gradient(135deg, #f5f9ff 0%, #eef5ff 100%);
}

/* 装饰元素 */
.decor-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: radial-gradient(circle at 30% 30%, rgba(7, 193, 96, 0.1) 0%, transparent 60%);
  z-index: 0;
}

.decor-bottom {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 300rpx;
  background: radial-gradient(circle at 70% 70%, rgba(255, 107, 107, 0.1) 0%, transparent 60%);
  z-index: 0;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 500rpx;
  background-color: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.logo:hover {
  transform: scale(1.05);
}

.logo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.title {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.subtitle {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 60rpx;
  text-align: center;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #06b358 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.wechat-login-btn::before {
  content: "";
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-size: contain;
  background-repeat: no-repeat;
  margin-right: 16rpx;
}

.wechat-login-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.4);
}

.wechat-login-btn:active {
  transform: translateY(0);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* 其他登录方式 */
.other-login {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.other-login-text {
  font-size: 26rpx;
  color: #666666;
  position: relative;
}

.other-login-text::before, .other-login-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 80rpx;
  height: 1rpx;
  background-color: #eeeeee;
}

.other-login-text::before {
  left: -100rpx;
}

.other-login-text::after {
  right: -100rpx;
}

/* 账号密码登录链接 */
.account-login {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #07c160;
  text-decoration: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: background-color 0.2s ease;
}

.account-login:hover {
  background-color: rgba(7, 193, 96, 0.05);
}

/* 底部提示 */
.tips {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
  margin-top: 60rpx;
  position: relative;
  z-index: 1;
}

.tips navigator {
  color: #07c160;
  text-decoration: none;
}