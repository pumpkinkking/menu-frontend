/* 计划页面样式 */
.page-container {
  padding: 20rpx;
}

.plan-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.plan-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.plan-date {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.meal-list {
  margin-top: 20rpx;
}

.meal-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.meal-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.meal-info {
  flex: 1;
}

.meal-name {
  font-size: 30rpx;
  margin-bottom: 4rpx;
}

.meal-desc {
  color: #999;
  font-size: 26rpx;
}

.add-plan-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(255,107,107,0.4);
}