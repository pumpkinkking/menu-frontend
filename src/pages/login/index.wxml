<view class="login-container">
  <view class="logo">
    <text class="title">情侣点餐</text>
  </view>
  <form class="login-form">
    <view class="form-group">
      <input type="number" value="{{phone}}" bindinput="handlePhoneInput" placeholder="请输入手机号" class="input"/>
    </view>
    <view class="form-group code-group">
      <input type="number" value="{{code}}" bindinput="handleCodeInput" placeholder="请输入验证码" class="input code-input"/>
      <button bindtap="getCode" disabled="{{countdown > 0}}" class="code-btn">{{countdown > 0 ? countdown + 's后重新获取' : '获取验证码'}}</button>
    </view>
    <button bindtap="loginByPhone" class="login-btn phone-login">手机号登录</button>
    <view class="divider">
      <view class="line"></view>
      <text class="text">其他登录方式</text>
      <view class="line"></view>
    </view>
    <button bindtap="loginByWechat" class="login-btn wechat-login">
      <image src="/static/icon/wechat.png" class="wechat-icon"/>
      <text>微信快捷登录</text>
    </button>
    <view class="navigate">
      <text class="register-link" bindtap="navigateToRegister">立即注册</text>
    </view>
  </form>
</view>