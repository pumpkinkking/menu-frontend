<view class="login-container">
  <view class="logo">
    <image src="/static/logo.png" class="logo-img" />
  </view>
  <view class="form-group">
    <text class="form-label">手机号</text>
    <input type="number" placeholder="请输入手机号" class="form-input" bindinput="handlePhoneInput" />
  </view>
  <view class="form-group">
    <text class="form-label">验证码</text>
    <view class="code-input-group">
      <input type="number" placeholder="请输入验证码" class="form-input code-input" bindinput="handleCodeInput" />
      <button class="get-code-btn" bindtap="getVerificationCode">{{countdown > 0 ? countdown + 's后重新获取' : '获取验证码'}}</button>
    </view>
  </view>
  <button class="login-btn" bindtap="login">登录</button>
  <view class="navigate-register">
    <text>还没有账号？</text>
    <text class="register-link" bindtap="navigateToRegister">立即注册</text>
  </view>
</view>