/* 注册页面样式 */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f9ff 0%, #eef5ff 100%);
  position: relative;
}

/* 装饰元素 */
.decor-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: radial-gradient(circle at 30% 30%, rgba(7, 193, 96, 0.1) 0%, transparent 60%);
  z-index: 0;
}

decor-bottom {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 300rpx;
  background: radial-gradient(circle at 70% 70%, rgba(255, 107, 107, 0.1) 0%, transparent 60%);
  z-index: 0;
}

/* 注册卡片 */
.register-card {
  width: 100%;
  max-width: 500rpx;
  background-color: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.05);
  margin: 60rpx auto 0;
  position: relative;
  z-index: 1;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 40rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.title {
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.subtitle {
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.input-control {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  border: 2rpx solid #eeeeee;
  border-radius: 16rpx;
  font-size: 30rpx;
  background-color: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-control:focus {
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
  outline: none;
}

/* 验证码容器 */
.code-container {
  display: flex;
  gap: 20rpx;
}

.code-container .input-control {
  flex: 1;
}

/* 获取验证码按钮 */
.get-code-btn {
  width: 200rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 96rpx;
  transition: background-color 0.3s ease;
}

.get-code-btn:hover {
  background-color: #e8e8e8;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #06b358 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.register-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.4);
}

.register-btn:active {
  transform: translateY(0);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* 用户协议 */
.agreement {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
  position: relative;
  z-index: 1;
}

.agreement checkbox {
  margin-right: 10rpx;
  transform: scale(1.2);
}

.agreement navigator {
  color: #07c160;
  text-decoration: none;
  padding: 2rpx 5rpx;
  border-radius: 5rpx;
}

.agreement navigator:hover {
  background-color: rgba(7, 193, 96, 0.05);
}

/* 登录链接 */
.login-link {
  text-align: center;
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  z-index: 1;
}

.login-link navigator {
  color: #07c160;
  margin-left: 10rpx;
  text-decoration: none;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  transition: background-color 0.2s ease;
}

.login-link navigator:hover {
  background-color: rgba(7, 193, 96, 0.05);
}