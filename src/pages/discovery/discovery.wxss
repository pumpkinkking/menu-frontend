/* 发现页面样式 */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f9ff 0%, #eef5ff 100%);
  position: relative;
}

/* 装饰元素 */
.decor-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: radial-gradient(circle at 30% 30%, rgba(7, 193, 96, 0.1) 0%, transparent 60%);
  z-index: 0;
}

.decor-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: radial-gradient(circle at 70% 70%, rgba(255, 107, 107, 0.05) 0%, transparent 70%);
  z-index: 0;
}

/* 搜索栏 */
.search-container {
  position: relative;
  z-index: 1;
}

.search-bar {
  background-color: white;
  border-radius: 44rpx;
  padding: 0 30rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  color: #999;
  font-size: 32rpx;
  margin-right: 15rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  background: transparent;
  border: none;
  height: 100%;
  color: #333333;
}

/* 分类导航 */
.category-container {
  position: relative;
  z-index: 1;
}

.category-list {
  display: flex;
  overflow-x: auto;
  margin-bottom: 30rpx;
  padding: 0 10rpx 10rpx;
  scrollbar-width: none;
}

.category-list::-webkit-scrollbar {
  display: none;
}

.category-item {
  padding: 10rpx 25rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  white-space: nowrap;
  font-size: 28rpx;
  min-width: auto;
}

.category-item.active {
  background-color: #ff6b6b;
  color: white;
}

/* 推荐标题 */
.recommend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 10rpx 30rpx;
  position: relative;
  z-index: 1;
}

.recommend-title {
  font-size: 34rpx;
  color: #333333;
  font-weight: 600;
}

.recommend-more {
  font-size: 26rpx;
  color: #07c160;
  display: flex;
  align-items: center;
}

.more-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

/* 食谱列表 */
.recipe-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.recipe-card {
  width: calc(50% - 12rpx);
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.recipe-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.recipe-image-container {
  position: relative;
  height: 220rpx;
  overflow: hidden;
}

.recipe-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.recipe-card:hover .recipe-img {
  transform: scale(1.05);
}

.recipe-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(7, 193, 96, 0.9);
  color: white;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.recipe-info {
  padding: 24rpx;
}

.recipe-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  color: #333333;
  font-weight: 600;
}

.recipe-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

.recipe-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.cook-time {
  display: flex;
  align-items: center;
}

.time-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.difficulty {
  padding: 2rpx 12rpx;
  background-color: #f5f9f5;
  color: #666666;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  position: relative;
  z-index: 1;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 36rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 30rpx;
  color: #999999;
  margin-bottom: 40rpx;
  text-align: center;
  padding: 0 40rpx;
}