/* 发现页面样式 */
.page-container {
  padding: 20rpx;
}

.search-bar {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-icon {
  color: #999;
  font-size: 32rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  background: transparent;
  border: none;
  height: 100%;
}

.category-list {
  display: flex;
  overflow-x: auto;
  padding-bottom: 15rpx;
  margin-bottom: 30rpx;
}

.category-item {
  padding: 10rpx 25rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  white-space: nowrap;
  font-size: 28rpx;
}

.category-item.active {
  background-color: #ff6b6b;
  color: white;
}

.recipe-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recipe-card {
  width: 48%;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.recipe-img {
  width: 100%;
  height: 200rpx;
}

.recipe-info {
  padding: 15rpx;
}

.recipe-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}