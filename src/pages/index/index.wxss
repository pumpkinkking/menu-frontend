/* 首页样式 */
.page-container {
  padding-bottom: 100rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.menu-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.menu-item {
  width: 33.33%;
  padding: 15rpx;
  box-sizing: border-box;
}

.menu-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-name {
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}