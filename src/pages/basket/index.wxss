/* 购物车页面样式文件 */

/* 清空默认边距 */
.page { margin: 0; padding: 0; }

/* 购物车列表容器 */
.cart-container { padding-bottom: 100rpx; }

/* 商品项样式 */
.cart-item { display: flex; padding: 20rpx; border-bottom: 1rpx solid #eee; }

/* 商品图片 */
.item-image { width: 120rpx; height: 120rpx; margin-right: 20rpx; }

/* 商品信息区域 */
.item-info { flex: 1; }

/* 商品名称 */
.item-name { font-size: 32rpx; margin-bottom: 10rpx; }

/* 商品价格 */
.item-price { color: #f00; font-size: 30rpx; }

/* 底部结算栏 */
.cart-footer { position: fixed; bottom: 0; left: 0; right: 0; height: 100rpx; background: #fff; border-top: 1rpx solid #eee; display: flex; align-items: center; padding: 0 20rpx; }

/* 结算按钮 */
.checkout-btn { background: #07c160; color: #fff; border-radius: 50rpx; padding: 0 40rpx; height: 70rpx; line-height: 70rpx; margin-left: auto; }