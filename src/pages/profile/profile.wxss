/* 个人中心页面样式 */
.page-container {
  padding-bottom: 120rpx;
}

.user-info {
  background-color: #ff6b6b;
  color: white;
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: white;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.menu-list {
  margin-top: 20rpx;
  background-color: white;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
}

.arrow-icon {
  color: #999;
  font-size: 32rpx;
}

.logout-btn {
  margin: 40rpx 30rpx 0;
  height: 90rpx;
  background-color: #f5f5f5;
  color: #ff6b6b;
  border-radius: 16rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
}